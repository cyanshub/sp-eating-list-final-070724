{{!-- 使用 row 搭配 col 排版各個區塊 --}}
<div class="row">

  {{!-- 獨佔上方區塊 --}}
  <div class="col-12" style="max-width: 960px; margin: 0 auto;">
    {{!-- 使用者資訊 --}}
    <div class="card mb-3">
      <div class="row g-0 align-items-center">
        <div class="col-md-4">
          {{#if user.avatar}}
          <img class="img-responsive center-block" src="{{user.avatar}}" style="width: 180px;" alt="使用者圖像">
          {{else}}
          <img src="https://fakeimg.pl/180/" width="180px" height="180px" />
          {{/if}}
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title mt-2">{{user.name}}</h5>
            <p class="card-text">{{user.email}}</p>
            <div class="btn-container mt-4">
              <a href="/restaurants" class="btn btn-outline-secondary me-2">Back</a>
              <a href="/users/{{user.id}}/edit" class="btn btn-outline-success" {{#ifCond userAuth.id user.id }}
                {{else}} style="pointer-events: none; color: gray;" {{/ifCond}}>Edit</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-12 mt-2" style="max-width: 960px; margin: 0 auto;">
    {{!-- 使用者擁有的店家 --}}
    <div class="card mb-3">
      <div class="card-header">
        {{#if restaurants}}
        已擁有店家: {{restaurants.length}}家
        {{else}}目前尚未擁有店家...
        {{/if}}
      </div>
      <div class="card-body d-flex flex-row bd-highlight align-items-center flex-wrap"
        style="background: white; height: auto; cursor:pointer">
        {{#each restaurants}}
        <a href="/restaurants/{{this.id}}">
          <img src="{{this.image}}" class="img-thumbnail ms-1" style="width: 120px; height: 120px;"
            alt="{{this.name}}">
        </a>
        {{/each}}
      </div>
    </div>
  </div>

</div>