<div class="search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="{{isSearched}}?keyword={{keyword}}" id="search-form">
        <h4 class="mb-2">尋找餐廳</h4>
        <div class="input-group">
          <input type="text" class="form-control" name="keyword" value="{{keyword}}" placeholder="請輸入餐廳名稱、分類, 或地點..."
            aria-label="Restaurant Name...">
          <div class="input-group-append">
            <button type="submit" id="search-button" class="btn btn-major">
              搜尋
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>